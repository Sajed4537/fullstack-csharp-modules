@model PanierDetailsVm

<h1>Panier @Model.PanierId - @Model.NomUtilisateur</h1>

<br/>

@if (TempData["message"] != null)
{
    <div class="alert alert-info">@TempData["message"]</div>
}

<h4>Total panier sans frais : @Model.SubTotal.ToString("C", new CultureInfo("fr-FR"))</h4>
<h4>frais de livraison : @Model.FraisLivraison.ToString("C", new CultureInfo("fr-FR"))</h4>
<h4>Remise : @Model.MontantRemise.ToString("C", new CultureInfo("fr-FR"))</h4>
<h4>Total panier : @Model.Total.ToString("C", new CultureInfo("fr-FR"))</h4>

<table class="table table-striped align-middle mt-3">
    <thead>
        <tr>
            <th>Produit</th>
            <th class="text-end">Prix unitaire</th>
            <th class="text-center">Quantité</th>
            <th class="text-end">Total ligne</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Lignes == null || !Model.Lignes.Any())
        {
            <tr>
                <td colspan="5" class="text-center text-muted">Aucune ligne dans ce panier pour le moment.</td>
            </tr>
        }
        else
        {
            foreach (var item in Model.Lignes)
            {
                <tr>
                    <td>@item.ProduitNom</td>
                    <td class="text-end">@item.PrixUnitaire.ToString("C", new CultureInfo("fr-FR"))</td>
                    <td class="text-center">@item.Quantite</td>
                    <td class="text-end">@((item.PrixUnitaire * item.Quantite).ToString("C", new CultureInfo("fr-FR")))</td>
                    <td class="text-center">
                        <form class="d-inline"
                              asp-controller="Panier"
                              asp-action="RemoveLine"
                              method="post"
                              asp-route-panierId="@Model.PanierId"
                              asp-route-produitId="@item.ProduitId"
                              asp-route-qty="1">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Retirer 1">−1</button>
                        </form>

                        <form class="d-inline ms-1"
                              asp-controller="Panier"
                              asp-action="RemoveLine"
                              method="post"
                              asp-route-panierId="@Model.PanierId"
                              asp-route-produitId="@item.ProduitId"
                              asp-route-qty="@item.Quantite">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-outline-secondary" title="Supprimer la ligne">Supprimer</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<br/>

@if (ViewBag.ProduitsDisponibles != null && ((IEnumerable<Produit>)ViewBag.ProduitsDisponibles).Any())
{
    <h3 class="mt-4">Ajouter un produit</h3>
    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th>Nom</th>
                <th class="text-end">Prix</th>
                <th class="text-center">Stock</th>
                <th class="text-center">Ajouter</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in (IEnumerable<Produit>)ViewBag.ProduitsDisponibles)
            {
                <tr>
                    <td>@p.Nom</td>
                    <td class="text-end">@p.Prix.ToString("C", new CultureInfo("fr-FR"))</td>
                    <td class="text-center">@p.Stock</td>
                    <td class="text-center">
                        <form class="d-inline"
                              asp-controller="Panier"
                              asp-action="AddLine"
                              method="post"
                              asp-route-panierId="@Model.PanierId"
                              asp-route-produitId="@p.Id">
                            @Html.AntiForgeryToken()
                            <div class="input-group input-group-sm" style="max-width: 160px;">
                                <input type="number"
                                       name="qty"
                                       class="form-control text-center"
                                       value="1"
                                       min="1"
                                       max="@p.Stock"
                                       step="1" />
                                <button type="submit" class="btn btn-outline-primary">Ajouter</button>
                            </div>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted mt-4">Aucun produit disponible à l’ajout (stock épuisé).</p>
}

<br/>


<form asp-controller="Panier" asp-action="SetLivraison" asp-route-panierId="@Model.PanierId" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label for="ModeLivraison" class="form-label">Mode de livraison :</label>
        <select name="mode" asp-for="ModeLivraison" asp-items="Html.GetEnumSelectList<ModeLivraison>()" class="form-select">
            <option value="">— Choisissez un mode de livraison —</option>
        </select>
        <br />
        <span asp-validation-for="ModeLivraison" class="text-danger"></span>
    </div>
    <button type="submit" class=" btn btn-primary">Confirmer</button>
</form>

<br/>

<div class="mt-3">
    <a asp-controller="Paniers" asp-action="Details" asp-route-id="@Model.PanierId" class="btn btn-outline-secondary">Retour aux détails du panier</a>
    <br/>
    <br/>
    <a asp-controller="Paniers" asp-action="Index" class="btn btn-link">Retour à la liste des paniers</a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
