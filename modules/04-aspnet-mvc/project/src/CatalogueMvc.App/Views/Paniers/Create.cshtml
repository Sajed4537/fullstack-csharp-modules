@model PanierCreateVm

<h1>Créer un panier</h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-controller="Paniers" asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label for="Utilisateur" class="form-label">Utilisateur :</label>
        <select asp-for="IdUtilisateur" asp-items="Model.Utilisateurs" class="form-select">
            <option value="">— Choisissez un utilisateur —</option>
        </select>
        <br/>
        <span asp-validation-for="IdUtilisateur" class="text-danger"></span>
    </div>

    <br />
    <button type="submit" class=" btn btn-primary">Créer</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
