@model IEnumerable<Produit>

@if (TempData["message"] != null)
{
    <div>
        <h2>@TempData["message"]</h2>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nom</th>
            <th scope="col">Catégorie</th>
            <th scope="col">Prix</th>
            <th scope="col">Stock</th>
            <th scope="col">Détails</th>
            <th scope="col">Éditer</th>
            <th scope="col">Supprimer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nom</td>
                <td>@item.Categorie</td>
                <td>@item.Prix.ToString("C", new CultureInfo("fr-FR"))</td>
                <td>@item.Stock</td>
                <td>
                    <a asp-controller="Produits" asp-action="Details" asp-route-id="@item.Id">Détails</a>
                </td>
                <td>
                    <a asp-controller="Produits" asp-action="Edit" asp-route-id="@item.Id">Éditer</a>
                </td>
                <td>
                    <a asp-controller="Produits" asp-action="Delete" asp-route-id="@item.Id">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>

</table>

<a asp-controller="Produits" asp-action="Create">Créer un produit</a>