@model UtilisateurFormVm

<h1>Éditer un utilisateur</h1>

<form asp-controller="Utilisateurs" asp-action="Edit" method="post" asp-route-id="@Model.Id">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label for="Nom" class="form-label">Nom :</label>
        <input type="text" id="Nom" asp-for="Nom" class="form-control" />
        <br />
        <span asp-validation-for="Nom" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="Prenom" class="form-label">Prénom :</label>
        <input type="text" id="Prenom" asp-for="Prenom" class="form-control" />
        <br />
        <span asp-validation-for="Prenom" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="Email" class="form-label">Email :</label>
        <input type="email" id="Email" asp-for="Email" class="form-control" />
        <br />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="Type" class="form-label">Type :</label>
        <select asp-for="Type" asp-items="Html.GetEnumSelectList<TypeUtilisateur>()" class="form-select">
            <option value="">— Choisissez un type —</option>
        </select>
        <br />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class=" btn btn-primary">Enregistrer</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
