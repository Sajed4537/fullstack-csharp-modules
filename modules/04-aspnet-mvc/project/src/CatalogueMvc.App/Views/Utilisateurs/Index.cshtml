@model IEnumerable<Utilisateur>

@if (TempData["message"] != null)
{
    <div>
        <h2>@TempData["message"]</h2>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nom</th>
            <th scope="col">Prénom</th>
            <th scope="col">Email</th>
            <th scope="col">Type</th>
            <th scope="col">Détails</th>
            <th scope="col">Éditer</th>
            <th scope="col">Supprimer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nom</td>
                <td>@item.Prenom</td>
                <td>@item.Email</td>
                <td>@item.Type</td>
                <td>
                    <a asp-controller="Utilisateurs" asp-action="Details" asp-route-id="@item.Id">Détails</a>
                </td>
                <td>
                    <a asp-controller="Utilisateurs" asp-action="Edit" asp-route-id="@item.Id">Éditer</a>
                </td>
                <td>
                    <a asp-controller="Utilisateurs" asp-action="Delete" asp-route-id="@item.Id">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>

</table>

<a asp-controller="Utilisateurs" asp-action="Create">Créer un utilisateur</a>